{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es6", "DOM"],
    "target": "es6",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": true,
    "declarationDir": "types",
    "maxNodeModuleJsDepth": 0,
    "jsx": "preserve",
    "skipLibCheck": true,
  },
  "include": ["src/**/*.js", "src/**/*.d.ts", "test/**/*.js", "test/**/*.d.ts", "test/e2e/fixtures/jsx/jsx.jsx"],
  "exclude": ["node_modules", "test/e2e/fixtures"]
}
